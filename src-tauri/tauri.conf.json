{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nuriemon",
  "version": "0.1.0",
  "identifier": "com.nuriemon.app",
  "build": {
    "beforeDevCommand": "npm run dev:dist",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nuriemon",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "resources/ja.lproj": "ja.lproj",
      "resources/global_settings.json.example": "global_settings.json.example",
      "resources/global_settings.json": "global_settings.json",
      "resources/python-sidecar": "python-sidecar"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
