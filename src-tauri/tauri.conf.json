{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nuriemon",
  "version": "0.1.0",
  "identifier": "jp.nuriemon.desktop",
  "build": {
    "beforeDevCommand": "npm run dev:dist",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nuriemon",
        "width": 1000,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ],
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$HOME/**",
          "$APPDATA/**",
          "$APPCONFIG/**",
          "$DOCUMENT/**",
          "$DOWNLOAD/**",
          "$PICTURE/**",
          "$DESKTOP/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "resources/ja.lproj": "ja.lproj",
      "resources/global_settings.json.example": "global_settings.json.example",
      "resources/global_settings.json": "global_settings.json",
      "../python-sidecar/main.py": "python-sidecar-fallback/main.py",
      "../python-sidecar/requirements.txt": "python-sidecar-fallback/requirements.txt",
      "resources/python-sidecar-fallback/README.txt": "python-sidecar-fallback/README.txt",
      "../python-sidecar/models/u2net.onnx": "python-sidecar-models/u2net.onnx"
    },
    "externalBin": [
      "../python-sidecar/python-sidecar",
      "../python-sidecar/python-sidecar.exe"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0",
      "hardenedRuntime": true,
      "entitlements": "macos/entitlements.plist",
      "exceptionDomain": "nuriemon.jp",
      "signingIdentity": "Developer ID Application: NGA, Inc. (87KUWA497A)"
    },
    "windows": {
      "sidecarFromResources": false
    }
  },
  "plugins": {}
}
